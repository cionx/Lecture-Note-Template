% restrict
\DeclarePairedDelimiter{\prerestrict}{.}{\rvert}
\NewDocumentCommand%
  {\restrict}%
  {s o m m}%
  {%
    \IfBooleanTF{#1}
    {%
      \prerestrict*{#3}_{#4}
    }
    {%
      \IfValueTF{#2}
      {%
        \prerestrict[#2]{#3}_{#4}
      }
      {%
        #3\rvert_{#4}
      }
    }
  }

% suchthat
\NewDocumentCommand{\suchthat}{so}{
  \IfValueTF{#2}
  {
    \:#2|\:
  }
  {
    \IfBooleanTF{#1}
    {
      \:\middle|\:
    }
    {
      \mathrel{|}      
    }
  }
}





